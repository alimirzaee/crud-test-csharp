 
@page "/customer/delete/{customerId:int}"
@inherits CustomerDeleteMv
@using Mc2.CrudTest.Shared.Models
 
<h2>Delete Customer</h2>
<br />
<div class="form-group">
    <h4>Do you want to delete this customer?</h4>
    <table class="table">
        <tbody>
            <tr>
                <td>Name</td>
                <td>@customer.Name</td>
            </tr>

            <tr>
                <td>Firstname</td>
                <td>@customer.Firstname</td>
            </tr>

             <tr>
                <td>Firstname</td>
                <td>@customer.Firstname</td>
            </tr>


            <tr>
                <td>Last Name</td>
                <td>@customer.Lastname</td>
            </tr>
            <tr>
                <td>Phone No</td>
                <td>@customer.PhoneNumber</td>
            </tr>
            <tr>
                <td>E-mail</td>
                <td>@customer.Email</td>
            </tr>

        </tbody>
    </table>
</div>
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await RemoveCustomer(customer.Id))" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() => Cancel())" class="btn btn-warning" />
</div>