@page "/customer/add"
@page "/customer/edit/{customerId:int}"

@inherits Customeraddvm
@using Mc2.CrudTest.Shared.Models
 

<h3>Add Customer</h3>
 

 
<h1>@Title Customer</h1>
<hr />
<EditForm Model="@customer" OnValidSubmit="SaveCustomer">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="customer.Name" />
        </div>
        <ValidationMessage For="@(() => customer.Name)" />
    </div>

     <div class="mb-3">
        <label for="Name" class="form-label">First Name</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="customer.Firstname" />
        </div>
        <ValidationMessage For="@(() => customer.Firstname)" />
    </div>

     <div class="mb-3">
        <label for="Name" class="form-label">Last Name</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="customer.Lastname" />
        </div>
        <ValidationMessage For="@(() => customer.Lastname)" />
    </div>
   

    <div class="mb-3">
        <label for="Name" class="form-label">Phone Number</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="customer.InputPhoneNumber"  />
        </div>        
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Email</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="customer.Email" />
        </div>
        <ValidationMessage For="@(() => customer.Email)" />
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Birth Date</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="customer.DateOfBirth" />
        </div>
        <ValidationMessage For="@(() => customer.DateOfBirth)" />
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Bank Account Number</label>
        <div class="col-md-4">
            <InputText class="form-control" @bind-Value="customer.BankAccountNumber" />
        </div>
        <ValidationMessage For="@(() => customer.BankAccountNumber)" />
    </div>

    <ErrorContent>
        <p  class="text-danger" >@ErrorMessage</p>
    </ErrorContent>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-light" @onclick="Cancel">Cancel</button>
    </div>
</EditForm>
 